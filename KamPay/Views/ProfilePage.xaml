<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             xmlns:converters="clr-namespace:KamPay.Converters"
             x:Class="KamPay.Views.ProfilePage"
             x:DataType="vm:ProfileViewModel"
             Title="Profil"
             Shell.BackgroundColor="#4CAF50">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ColorToLightConverter x:Key="ColorToLightConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="0" Padding="0,0,0,15">

                <Frame Padding="20" CornerRadius="0" BackgroundColor="#4CAF50" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="15">

                        <Frame Padding="0" WidthRequest="100" HeightRequest="100" CornerRadius="50" IsClippedToBounds="True" BackgroundColor="White" HorizontalOptions="Center">
                            <Label Text="{Binding CurrentUser.FullName, Converter={StaticResource FirstCharConverter}}" FontSize="40" FontAttributes="Bold" TextColor="#4CAF50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                        </Frame>

                        <Label Text="{Binding CurrentUser.FullName}" FontSize="24" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" />
                        <Label Text="{Binding CurrentUser.Email}" FontSize="14" TextColor="White" Opacity="0.9" HorizontalTextAlignment="Center" />

                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,15,0,0">
                            <Frame Grid.Column="0" Padding="15" CornerRadius="15" BackgroundColor="White">
                                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label Text="{Binding UserStats.TotalProducts}" FontSize="24" FontAttributes="Bold" TextColor="#4CAF50" HorizontalTextAlignment="Center" />
                                    <Label Text="ÃœrÃ¼n" FontSize="12" TextColor="#666" HorizontalTextAlignment="Center" />
                                </VerticalStackLayout>
                            </Frame>
                            <Frame Grid.Column="1" Padding="15" CornerRadius="15" BackgroundColor="White">
                                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label Text="{Binding UserStats.Points}" FontSize="24" FontAttributes="Bold" TextColor="#FF9800" HorizontalTextAlignment="Center" />
                                    <Label Text="Puan" FontSize="12" TextColor="#666" HorizontalTextAlignment="Center" />
                                </VerticalStackLayout>
                            </Frame>
                            <Frame Grid.Column="2" Padding="15" CornerRadius="15" BackgroundColor="White">
                                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label Text="{Binding MyBadges.Count}" FontSize="24" FontAttributes="Bold" TextColor="#2196F3" HorizontalTextAlignment="Center" />
                                    <Label Text="Rozet" FontSize="12" TextColor="#666" HorizontalTextAlignment="Center" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>

                    </VerticalStackLayout>
                </Frame>

                <Frame Margin="15,15,15,0" Padding="15" CornerRadius="15" BorderColor="#E0E0E0" BackgroundColor="White">
                </Frame>

                <Frame Margin="15" Padding="15" CornerRadius="15" BorderColor="#E0E0E0" BackgroundColor="White">
                </Frame>

                <Frame Margin="15,0,15,0" Padding="15" CornerRadius="15" BorderColor="#E0E0E0" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“œ Ä°ÅŸlemlerim" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Tekliflerim" Command="{Binding GoToOffersCommand}" />
                        <Button Text="Hizmet Taleplerim" Command="{Binding GoToServiceRequestsCommand}" />
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Ã‡Ä±kÄ±ÅŸ Yap"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="15,15,15,0" />
            </VerticalStackLayout>
        </ScrollView>

        <Grid IsVisible="{Binding IsLoading}" BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True" Color="White" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>