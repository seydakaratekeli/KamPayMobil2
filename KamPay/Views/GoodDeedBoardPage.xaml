<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             x:Class="KamPay.Views.GoodDeedBoardPage"
             x:DataType="vm:GoodDeedBoardViewModel"
             Title="İyilik Panosu">

    <Grid RowDefinitions="Auto, *">
        <Frame Grid.Row="0" Margin="10" Padding="15" BorderColor="{StaticResource Gray300}" CornerRadius="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="Panoya Mesaj Bırak" FontSize="18" FontAttributes="Bold"/>
                <Entry Placeholder="Başlık" Text="{Binding Title}" />
                <Editor Placeholder="Açıklama..." Text="{Binding Description}" HeightRequest="100" AutoSize="Disabled" />
                <Picker Title="İlan Tipi" ItemsSource="{Binding PostTypes}" SelectedItem="{Binding SelectedType}">
                    <Picker.ItemDisplayBinding>
                        <Binding Converter="{StaticResource PostTypeToTextConverter}" />
                    </Picker.ItemDisplayBinding>
                </Picker>
                <Button Text="Paylaş" Command="{Binding CreatePostCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />
            </VerticalStackLayout>
        </Frame>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Posts}" Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:GoodDeedPost">
                    <Frame Margin="0,5" Padding="15" BorderColor="{StaticResource Gray200}" CornerRadius="10">
                        <VerticalStackLayout Spacing="10">

                            <Grid ColumnDefinitions="*, Auto">
                                <Label Grid.Column="0" Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
                                <Label Grid.Column="1" Text="{Binding Type, Converter={StaticResource PostTypeToTextConverter}}" FontSize="12" TextColor="{StaticResource Primary}"/>
                            </Grid>

                            <Label Text="{Binding Description}" LineBreakMode="WordWrap" />

                            <Grid Grid.Row="2" ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding UserName}" FontSize="12" FontAttributes="Bold"/>
                                    <Label Text="{Binding CreatedAt, Converter={StaticResource DateTimeToTimeAgoConverter}}" FontSize="10" TextColor="{StaticResource Gray600}"/>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                    <ImageButton Source="heart_icon.svg" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GoodDeedBoardViewModel}}, Path=LikePostCommand}" CommandParameter="{Binding .}" HeightRequest="24" WidthRequest="24" />
                                    <Label Text="{Binding LikeCount}" VerticalOptions="Center"/>
                                    <Button Text="Sil" IsVisible="{Binding IsOwner}" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GoodDeedBoardViewModel}}, Path=DeletePostCommand}" CommandParameter="{Binding .}" BackgroundColor="{StaticResource Danger}" HeightRequest="35" Padding="10,0"/>
                                </HorizontalStackLayout>
                            </Grid>

                            <BoxView HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,5"/>

                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Comments.Values}" Spacing="8">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="models:Comment">
                                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                                            <Image Source="{Binding UserProfileImageUrl}" Aspect="AspectFill" HeightRequest="30" WidthRequest="30" Clip="{EllipseGeometry Center='15,15', RadiusX=15, RadiusY=15}" />
                                            <VerticalStackLayout Grid.Column="1">
                                                <Label FontSize="12">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding UserName}" FontAttributes="Bold" />
                                                            <Span Text=" " />
                                                            <Span Text="{Binding CreatedAt, Converter={StaticResource DateTimeToTimeAgoConverter}}" TextColor="{StaticResource Gray600}" FontSize="10"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label Text="{Binding Text}" FontSize="14" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5" Margin="0,10,0,0">
                                <Entry Grid.Column="0" Placeholder="Yorumunu yaz..." 
                               Text="{Binding Source={RelativeSource AncestorType={x:Type vm:GoodDeedBoardViewModel}}, Path=NewCommentText}"
                               ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:GoodDeedBoardViewModel}}, Path=AddCommentCommand}"
                               ReturnCommandParameter="{Binding .}"/>
                                <Button Grid.Column="1" Text="Gönder"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GoodDeedBoardViewModel}}, Path=AddCommentCommand}"
                                CommandParameter="{Binding .}" Padding="15,0" HeightRequest="40"/>
                            </Grid>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Grid.RowSpan="2" VerticalOptions="Center" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>