                                </VerticalStackLayout>

                                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">

                                    <!-- ðŸŸ¢ Yeni: Fiyat etiketi -->
                                    <Label Text="{Binding Price, StringFormat='{0} â‚º'}" 
