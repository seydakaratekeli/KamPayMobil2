<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             x:Class="KamPay.Views.NotificationsPage"
             Title="Bildirimler"
             Shell.BackgroundColor="{StaticResource Primary}">

    <Grid>
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshNotificationsCommand}">
            <CollectionView ItemsSource="{Binding Notifications}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="ðŸ”•" FontSize="60" HorizontalTextAlignment="Center" />
                        <Label Text="{Binding EmptyMessage}"
                               FontSize="16"
                               TextColor="{StaticResource Gray600}"
                               HorizontalTextAlignment="Center"
                               Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Notification">
                        <Frame Padding="15" Margin="15,8" CornerRadius="12" HasShadow="False" BorderColor="{StaticResource Gray300}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NotificationsViewModel}}, Path=NotificationTappedCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsRead}" Value="False">
                                    <Setter Property="BackgroundColor" Value="#E8F5E9" />
                                </DataTrigger>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsRead}" Value="True">
                                    <Setter Property="BackgroundColor" Value="White" />
                                </DataTrigger>
                            </Frame.Triggers>

                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <Label Grid.Column="0" Text="â—" FontSize="14" VerticalOptions="Center" TextColor="{StaticResource Accent}" IsVisible="{Binding IsRead, Converter={StaticResource InverseBoolConverter}}" />

                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="{Binding Message}" FontAttributes="Bold" FontSize="16" />
                                    <Label Text="{Binding TimeAgoText}" FontSize="12" TextColor="{StaticResource Gray600}" />
                                </VerticalStackLayout>

                                <Label Grid.Column="2" Text=">" FontSize="18" TextColor="{StaticResource Gray400}" VerticalOptions="Center" HorizontalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}"
                         Color="{StaticResource Primary}"
                         VerticalOptions="Center" HorizontalOptions="Center" />
    </Grid>
</ContentPage>