<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             xmlns:conv="clr-namespace:KamPay.Converters"
             x:Class="KamPay.Views.MessagesPage"
             Title="Mesajlar"
             Shell.BackgroundColor="#4CAF50">

    <Grid RowDefinitions="Auto,*">

        <!-- ðŸ”¹ Ãœst Bilgi KartÄ± -->
        <Frame Grid.Row="0"
               Margin="15,10"
               Padding="15"
               CornerRadius="15"
               BackgroundColor="#E8F5E9"
               BorderColor="Transparent">
            <HorizontalStackLayout Spacing="10">
                <Label Text="ðŸ’¬"
                       FontSize="24"
                       VerticalOptions="Center" />
                <VerticalStackLayout>
                    <Label Text="MesajlarÄ±m"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="{Binding UnreadCount, StringFormat='{0} okunmamÄ±ÅŸ mesaj'}"
                           FontSize="12"
                           TextColor="#4CAF50"
                           IsVisible="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <!-- ðŸ”¹ Mesaj Listesi -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Conversations}"
                        SelectionMode="None"
                        IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">

            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="40"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center">
                    <Label Text="ðŸ’¬"
                           FontSize="60"
                           HorizontalTextAlignment="Center" />
                    <Label Text="{Binding EmptyMessage}"
                           FontSize="16"
                           TextColor="#757575"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Conversation">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Sil"
                                           BackgroundColor="#F44336"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=DeleteConversationCommand}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="15,5"
                               Padding="15"
                               CornerRadius="15"
                               BorderColor="#E0E0E0"
                               BackgroundColor="White">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=ConversationTappedCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="60,*,Auto"
                                  ColumnSpacing="15">

                                <!-- KullanÄ±cÄ± AvatarÄ± -->
                                <Frame Grid.Column="0"
                                       Padding="0"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       CornerRadius="30"
                                       IsClippedToBounds="True"
                                       BackgroundColor="#4CAF50">
                                    <Label Text="{Binding OtherUserName, StringFormat='{0:0}'}"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center" />
                                </Frame>

                                <!-- Mesaj Bilgileri -->
                                <VerticalStackLayout Grid.Column="1"
                                                     VerticalOptions="Center"
                                                     Spacing="5">
                                    <Label Text="{Binding OtherUserName}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="1" />

                                    <Label Text="{Binding LastMessage}"
                                           FontSize="14"
                                           TextColor="#757575"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="1" />

                                    <Frame IsVisible="{Binding ProductTitle, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                                           Padding="8,4"
                                           CornerRadius="8"
                                           BackgroundColor="#E3F2FD"
                                           BorderColor="Transparent">
                                        <Label Text="{Binding ProductTitle, StringFormat='ðŸ“¦ {0}'}"
                                               FontSize="11"
                                               TextColor="#1976D2"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />
                                    </Frame>
                                </VerticalStackLayout>

                                <!-- Zaman ve OkunmamÄ±ÅŸ Rozet -->
                                <VerticalStackLayout Grid.Column="2"
                                                     VerticalOptions="Center"
                                                     HorizontalOptions="End"
                                                     Spacing="5">
                                    <Label Text="{Binding LastMessageTimeText}"
                                           FontSize="11"
                                           TextColor="#757575"
                                           HorizontalTextAlignment="End" />

                                    <Frame IsVisible="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}"
                                           Padding="8,4"
                                           CornerRadius="10"
                                           BackgroundColor="#4CAF50"
                                           BorderColor="Transparent"
                                           HorizontalOptions="End">
                                        <Label Text="{Binding UnreadCount}"
                                               FontSize="11"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                    </Frame>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ðŸ”¥ YENÄ°: Skeleton Loader -->
        <VerticalStackLayout Grid.Row="1" 
                             Padding="15"
                             Spacing="10"
                             IsVisible="{Binding IsLoading}">
            <!-- Skeleton Item 1 -->
            <Frame Padding="15" CornerRadius="15" BackgroundColor="White" BorderColor="#E0E0E0">
                <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                    <BoxView Grid.Column="0" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#E0E0E0"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                        <BoxView HeightRequest="18" WidthRequest="120" BackgroundColor="#E0E0E0" CornerRadius="4"/>
                        <BoxView HeightRequest="14" WidthRequest="180" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                    </VerticalStackLayout>
                    <BoxView Grid.Column="2" HeightRequest="12" WidthRequest="40" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                </Grid>
            </Frame>

            <!-- Skeleton Item 2 -->
            <Frame Padding="15" CornerRadius="15" BackgroundColor="White" BorderColor="#E0E0E0">
                <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                    <BoxView Grid.Column="0" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#E0E0E0"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                        <BoxView HeightRequest="18" WidthRequest="150" BackgroundColor="#E0E0E0" CornerRadius="4"/>
                        <BoxView HeightRequest="14" WidthRequest="200" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                    </VerticalStackLayout>
                    <BoxView Grid.Column="2" HeightRequest="12" WidthRequest="40" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                </Grid>
            </Frame>

            <!-- Skeleton Item 3 -->
            <Frame Padding="15" CornerRadius="15" BackgroundColor="White" BorderColor="#E0E0E0">
                <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                    <BoxView Grid.Column="0" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#E0E0E0"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                        <BoxView HeightRequest="18" WidthRequest="100" BackgroundColor="#E0E0E0" CornerRadius="4"/>
                        <BoxView HeightRequest="14" WidthRequest="160" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                    </VerticalStackLayout>
                    <BoxView Grid.Column="2" HeightRequest="12" WidthRequest="40" BackgroundColor="#F0F0F0" CornerRadius="3"/>
                </Grid>
            </Frame>
        </VerticalStackLayout>

    </Grid>
</ContentPage>